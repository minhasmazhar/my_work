<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_patient_card" model="ir.actions.report">
        <field name="name">Patient Card</field>
        <field name="model">hospital.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">om_hospital.report_patient_card</field>
        <field name="report_file">om_hospital.report_patient_card</field>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_patient_card_xlsx" model="ir.actions.report">
        <field name="name">Patient Card Excel</field>
        <field name="model">hospital.patient</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">om_hospital.report_patient_card_xlsx</field>
        <field name="report_file">om_hospital.report_patient_card_xlsx</field>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_appointment" model="ir.actions.report">
        <field name="name">Appointment Details</field>
        <field name="model">appointment.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">om_hospital.report_appointment_details</field>
        <field name="report_file">om_hospital.report_appointment_details</field>
        <field name="binding_model_id" ref="model_appointment_report_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_patient_details" model="ir.actions.report">
        <field name="name">Patient Details</field>
        <field name="model">hospital.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">om_hospital.report_patient_details</field>
        <field name="report_file">om_hospital.report_patient_details</field>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="binding_type">report</field>
    </record>

    <!--    Templates-->
    <template id="report_patient_details">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="position:relative">

                    <div class="oe_structure"/>
                    <div class="text-center">
                        <h2>Patients Detail</h2>
                        <table class="table table-sm o_main_table">
                            <thread>
                                <tr>
                                    <th name="th_name" class="text_left">
                                        <span>Name</span>
                                    </th>
                                    <th name="th_Age" class="text_left">
                                        <span>Age</span>
                                    </th>
                                    <th name="th_gender" class="text_left">
                                        <span>Gender</span>
                                    </th>
                                    <th name="th_image" class="text_left">
                                        <span>Image</span>
                                    </th>

                                </tr>
                            </thread>

                            <t t-foreach="docs" t-as="o">

                                <tr>
                                    <td>
                                        <span t-field="o.name"/>
                                    </td>
                                    <td>
                                        <span t-field="o.age"/>
                                    </td>
                                    <td>
                                        <span t-field="o.gender"/>
                                    </td>
                                    <td>
                                        <img t-if="o.image"
                                             t-att-src="'data:image/png;base64,%s'%to_text(o.image)"
                                             height="140"
                                             border="1"
                                             width="140"/>
                                    </td>

                                </tr>
                            </t>
                        </table>
                    </div>
                    <!--                    <div class="footer">-->
                    <!--                        <p style="text-align:center">Doctor</p>-->
                    <!--                        <p style="text-align:center">-&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;</p>-->
                    <!--                    </div>-->

                </div>

            </t>

        </t>

    </template>

</odoo>