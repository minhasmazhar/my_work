<?xml version="1.0"?>
<odoo>
    <!--    Form View-->
    <record id="view_appointment_report_form" model="ir.ui.view">
        <field name="name">create.appointment.report.wizard.form</field>
        <field name="model">appointment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Appointment Report">
                <group>
                    <group class="oe_title">
                        <field name="patient_id"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button id="btn_view_appointment" name="action_print_report" string="Print Report"
                            class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
