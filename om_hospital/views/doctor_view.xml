<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="specific_patient_appointment_action" model="ir.actions.act_window">
        <field name="name">Patient Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="domain">[('doctor_id','=',active_id)]</field>
        <field name="context">{'default_doctor_id':active_id}</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your patient appointment here!
            </p>
        </field>
    </record>

    <record id="doctor_view_kanban" model="ir.ui.view">
        <field name="name">doctor.view.kanban</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="doctor_name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>

                                    <li>
                                        <string>Name:</string>
                                        <field name="doctor_name"/>
                                    </li>
                                    <li>
                                        <string>Age:</string>
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        <string>Gender:</string>
                                        <field name="gender"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="doctor_view_form" model="ir.ui.view">
        <field name="name">doctor.view.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <!--                    Smart Button-->
                    <div class="oe_button_box" name="button_box">
                        <div>
                            <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                    attrs="{'invisible': [('active', '=', True)]}"/>
                        </div>
                        <button name="%(om_hospital.specific_patient_appointment_action)d" type="action"
                                class="oe_stat_button" icon="fa-calendar">
                            <div class="o_stat_info">
                                <field name="appointment_count" class="o_stat_value"/>
                                <span class="o_stat_text">Appointments</span>

                            </div>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>

                    <group>
                        <group>
                            <field name="doctor_name"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="note"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <!--                <div class="oe_chatter">-->
                <!--                    <field name="message_follower_ids"/>-->
                <!--                    <field name="activity_ids"/>-->
                <!--                    <field name="message_ids"/>-->
                <!--                </div>-->
            </form>
        </field>
    </record>

    <record id="doctor_view_tree_form" model="ir.ui.view">
        <field name="name">doctor.view.tree.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="doctor_name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your doctor here!
            </p>
        </field>
    </record>

    <!--Search Model-->
    <record id="doctor_search" model="ir.ui.view">
        <field name="name">doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search string="Doctors">
                <field name="doctor_name"/>
                <field name="note"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <menuitem id="menu_doctor_root" name="Doctors" parent="menu_hospital_root" sequence="10"/>
    <menuitem id="menu_doctor" name="Doctors" parent="menu_doctor_root" sequence="-10" action="doctor_action"/>

</odoo>