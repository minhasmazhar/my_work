<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Server Actions Override-->
    <record id="action_create_appointments" model="ir.actions.server">
        <field name="name">Create Appointment</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="om_hospital.model_hospital_patient"/>
        <field name="binding_model_id" ref="om_hospital.model_hospital_patient"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            if record:
            act_values = env.ref('om_hospital.action_create_appointment').sudo().read()[0]
            act_values.update({'context':env.context})
            action = act_values
        </field>
    </record>
<!--Kanban View-->
    <record id="patient_view_kanban" model="ir.ui.view">
        <field name="name">patient.view.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        <field name="gender"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
<!--Tree View-->
    <record id="patient_view_tree_form" model="ir.ui.view">
        <field name="name">patient.view.tree.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree expand="1">
                <header>
                    <button name="action_done" string="Mark as Done" class="btn-primary"
                            type="object"/>
                </header>
                <field name="name"/>
                <field name="age"/>
                <field name="responsible_id"/>
                <field name="gender"/>
                <field name="appointment_count"/>
                <field name="note"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
<!--form view-->
    <record id="patient_view_form" model="ir.ui.view">
        <field name="name">patient.view.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                    <button id="btn_confirm" name="action_confirm" string="Confirm" class="btn-primary"
                            type="object" states="draft,confirm" confirm="Are you sure to confirm this?"/>
                    <button id="btn_done" name="action_done" string="Mark as Done" class="btn-primary"
                            type="object" states="draft" confirm="Are you sure to done this?"/>
                    <button id="btn_draft" name="action_draft" string="Mark as Draft" class="btn-primary"
                            type="object" confirm="Are you sure to draft this?"/>
                    <button id="btn_create_appointment" name="%(om_hospital.action_create_appointment)d"
                            string="Create Appointment" class="btn-primary"
                            type="action"/>
                </header>
                <sheet>
<!--                    Smart Button-->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_appointments" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                            <div class="o_stat_info">
                                <field name="appointment_count" class="o_stat_value"/>
                                <span class="o_stat_text">Appointments</span>

                            </div>
                        </button>
                    </div>

                    <field name="image" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="appointment_count"/>
                            <field name="responsible_id"/>
                        </group>
                        <group>
                            <field name="gender" invisible="context.get('hide_gender')"/>
                            <field name="note"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Appointment">
                            <field name="appointment_ids">
                                <tree create="0" delete="0" edit="0">
                                    <field name="reference"/>
                                    <field name="name"/>
                                    <field name="patient_id"/>
                                    <field name="note"/>
                                    <field name="doctor_id"/>
                                    <field name="date_appointment" optional="show"/>
                                    <field name="date_checkup" optional="hide"/>
                                    <field name="note" optional="show"/>
                                </tree>
                                <form create="0" edit="0" delete="0">
                                    <group>
                                        <group>
                                            <field name="doctor_id"/>
                                            <field name="patient_id"/>
                                            <field name="gender" readonly="1" force_save="1"/>
                                            <field name="age"/>
                                        </group>
                                        <group>
                                            <field name="date_appointment"/>
                                            <field name="date_checkup"/>
                                            <field name="note"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
<!--Action-->
    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_gender' :1 }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your patient here!
            </p>
        </field>
    </record>
<!--Search Model-->
    <record id="patient_search" model="ir.ui.view">
        <field name="name">patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name"/>
                <field name="note"/>
                <separator/>
                <filter name="male" string="Male" domain="[('gender','=','male')]"/>
                <filter name="female" string="Female" domain="[('gender','=','female')]"/>
                <filter name="other" string="Other" domain="[('gender','=','other')]"/>
                <group expand="1" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    <filter string="Responsible" name="responsible" context="{'group_by':'responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>
<!--Menu Items-->
    <menuitem id="menu_hospital_root"
              name="Hospital"
              sequence="10"/>

    <menuitem id="menu_hospital_patient_root"
              name="Patients"
              parent="menu_hospital_root"
              sequence="-10"/>

    <menuitem id="menu_hospital_patient"
              name="Patients"
              action="patient_action"
              parent="menu_hospital_patient_root"
              sequence="10"/>

</odoo>