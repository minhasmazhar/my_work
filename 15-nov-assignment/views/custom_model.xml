<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Tree form-->
    <record id="custom_model_view_tree_form" model="ir.ui.view">
        <field name="name">custom.model.tree.form</field>
        <field name="model">custom.model</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>
    <!--Kanban form-->
    <record id="custom_model_view_kanban" model="ir.ui.view">
        <field name="name">custom.model.view.kanban</field>
        <field name="model">custom.model</field>
        <field name="arch" type="xml">
            <kanban default_order="id asc">
                <field name="id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        <field name="gender"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--Form view-->
    <record id="custom_model_view_form" model="ir.ui.view">
        <field name="name">custom.model.view.form</field>
        <field name="model">custom.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_click" id="btn_click" type="object" class='btn btn-primary'
                            string="Click me!"></button>
                </header>

                <sheet>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--action define-->
    <record id="custom_model_action" model="ir.actions.act_window">
        <field name="name">Custom Model</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">custom.model</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This is your custom model!
            </p>
        </field>
    </record>


    <menuitem id="menu_custom_model" name="Custom Model" parent="sale.sale_order_menu" sequence="-10"
              action="custom_model_action"/>
</odoo>